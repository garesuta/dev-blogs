---
import BaseHead from "../components/BaseHead.astro";
import UserMenu from "../components/UserMenu.vue";
import { SITE_TITLE } from "../consts";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Admin panel" } = Astro.props;

// Get current path for active state
const currentPath = Astro.url.pathname;

// Helper to check if link is active
const isActive = (href: string) => {
  if (href === "/editor/posts") {
    return currentPath === href || currentPath.startsWith("/editor/posts/");
  }
  if (href === "/admin") {
    return currentPath === href;
  }
  return currentPath.startsWith(href);
};
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} - Admin - ${SITE_TITLE}`} description={description} />
  </head>
  <body>
    <!-- Admin Header -->
    <header class="admin-header navbar navbar-expand-lg border-bottom sticky-top" style="background: var(--cyber-surface);">
      <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" style="color: var(--cyber-text-primary);" href="/editor/posts">
          <i class="bi bi-pencil-square"></i>
          <span>{SITE_TITLE} CMS</span>
        </a>
        <div class="d-flex align-items-center gap-3">
          <a href="/" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Back to Site
          </a>
          <UserMenu client:load />
        </div>
      </div>
    </header>

    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar py-3" style="background: var(--cyber-bg-tertiary);">
          <div class="position-sticky">
            <p class="px-3 text-muted small mb-2 text-uppercase fw-semibold">Content</p>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class:list={["nav-link", { active: isActive("/editor/posts") }]} href="/editor/posts">
                  <i class="bi bi-file-text me-2"></i>Posts
                </a>
              </li>
            </ul>
            <hr />
            <p class="px-3 text-muted small mb-2 text-uppercase fw-semibold">Admin Only</p>
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class:list={["nav-link", { active: isActive("/admin") }]} href="/admin">
                  <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </a>
              </li>
              <li class="nav-item">
                <a class:list={["nav-link", { active: isActive("/admin/users") }]} href="/admin/users">
                  <i class="bi bi-people me-2"></i>Users
                </a>
              </li>
              <li class="nav-item">
                <a class:list={["nav-link", { active: isActive("/admin/taxonomy") }]} href="/admin/taxonomy">
                  <i class="bi bi-tags me-2"></i>Categories & Tags
                </a>
              </li>
              <li class="nav-item">
                <a class:list={["nav-link", { active: isActive("/admin/about") }]} href="/admin/about">
                  <i class="bi bi-person-circle me-2"></i>About Page
                </a>
              </li>
            </ul>
          </div>
        </nav>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
          <h1 class="h2 mb-4">{title}</h1>
          <slot />
        </main>
      </div>
    </div>
    <!-- Bootstrap JS -->
    <script>
      import "bootstrap/dist/js/bootstrap.bundle.min.js";
    </script>
  </body>
</html>

<style>
  .sidebar {
    min-height: calc(100vh - 60px);
    border-right: 1px solid var(--cyber-neutral-200);
  }

  .nav-link {
    color: var(--cyber-text-secondary);
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    margin: 0.125rem 0.5rem;
    transition: all 0.15s ease;
    display: flex;
    align-items: center;
  }

  .nav-link:hover {
    background-color: var(--cyber-surface-hover);
    color: var(--cyber-text-primary);
  }

  .nav-link.active {
    color: var(--cyber-primary);
    background-color: var(--cyber-success-bg);
    font-weight: 500;
  }

  .nav-link.active i {
    color: var(--cyber-primary);
  }

  .nav-link i {
    color: var(--cyber-text-muted);
    transition: color 0.15s ease;
  }

  .nav-link:hover i {
    color: var(--cyber-text-secondary);
  }

  hr {
    margin: 1rem 0.75rem;
    opacity: 0.15;
  }
</style>
