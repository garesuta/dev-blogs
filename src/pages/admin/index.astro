---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { auth } from "../../lib/auth";

const user = Astro.locals.user;

// Get some stats
let userCount = 0;
let sessionCount = 0;

try {
  const users = await auth.api.listUsers({
    headers: Astro.request.headers,
    query: { limit: 1 },
  });
  userCount = users.total || 0;
} catch (e) {
  console.error("Failed to fetch user count:", e);
}
---

<AdminLayout title="Dashboard">
  <div class="row g-4">
    <div class="col-md-4">
      <div class="card bg-primary text-white">
        <div class="card-body">
          <h5 class="card-title">Total Users</h5>
          <p class="card-text display-4">{userCount}</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-success text-white">
        <div class="card-body">
          <h5 class="card-title">Active Sessions</h5>
          <p class="card-text display-4">-</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card bg-info text-white">
        <div class="card-body">
          <h5 class="card-title">Your Role</h5>
          <p class="card-text display-4 text-capitalize">{user?.role}</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-flex gap-3">
            <a href="/admin/users" class="btn btn-outline-primary">
              <i class="bi bi-people me-2"></i>Manage Users
            </a>
            <a href="/editor" class="btn btn-outline-secondary">
              <i class="bi bi-pencil-square me-2"></i>Manage Content
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Logged In As</h5>
        </div>
        <div class="card-body">
          <table class="table mb-0">
            <tbody>
              <tr>
                <th scope="row">Name</th>
                <td>{user?.name}</td>
              </tr>
              <tr>
                <th scope="row">Email</th>
                <td>{user?.email}</td>
              </tr>
              <tr>
                <th scope="row">Role</th>
                <td><span class="badge bg-danger">{user?.role}</span></td>
              </tr>
              <tr>
                <th scope="row">User ID</th>
                <td><code>{user?.id}</code></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>
