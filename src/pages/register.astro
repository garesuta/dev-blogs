---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import RegisterForm from "../components/RegisterForm.vue";
import GoogleButton from "../components/GoogleButton.vue";
import { SITE_TITLE } from "../consts";

export const prerender = false;

// Redirect if already logged in
if (Astro.locals.user) {
  return Astro.redirect("/");
}
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Create Account - ${SITE_TITLE}`} description="Create a new account" />
  </head>
  <body>
    <Header />
    <main class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
          <div class="login-card">
            <div class="p-4">
              <h1 class="h3 text-center mb-4">Create Account</h1>

              <GoogleButton client:load />

              <div class="divider my-4">
                <span>or</span>
              </div>

              <RegisterForm client:load />

              <p class="text-center mt-4 mb-0">
                Already have an account? <a href="/login">Sign in</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  .login-card {
    background: var(--cyber-surface);
    border: 1px solid var(--cyber-border-color);
    border-radius: 16px;
    box-shadow: var(--cyber-shadow-lg);
  }

  .divider {
    display: flex;
    align-items: center;
    text-align: center;
    color: var(--cyber-text-muted);
  }

  .divider::before,
  .divider::after {
    content: "";
    flex: 1;
    border-bottom: 1px solid var(--cyber-neutral-200);
  }

  .divider span {
    padding: 0 1rem;
  }
</style>
