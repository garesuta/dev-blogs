---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

export const prerender = false;

// Get recent blog posts
const allPosts = (await getCollection('blog')).sort(
	(a, b) => Math.floor(new Date(b.data.pubDate).getTime() / 1000) - Math.floor(new Date(a.data.pubDate).getTime() / 1000)
);
const recentPosts = allPosts.slice(0, 3);
---

<!doctype html>
<html lang="en" data-bs-theme="dark">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<!-- Hero Section -->
		<section class="hero-cyber">
			<div class="container position-relative">
				<div class="row align-items-center">
					<div class="col-lg-7">
						<span class="badge-tech mb-3">
							<i class="bi bi-cpu-fill"></i> Tech Insights for Developers
						</span>
						<h1 class="display-3 fw-bold mb-4 glow-text">
							Exploring the <span class="gradient-text">Future</span> of Technology
						</h1>
						<p class="lead mb-5" style="color: var(--cyber-text-secondary); font-size: 1.2rem;">
							Deep dives into AI, machine learning, modern frameworks, and cutting-edge development practices. Stay ahead of the curve.
						</p>
						<div class="d-flex gap-3 flex-wrap">
							<a href="/blog" class="btn btn-cyber btn-lg">
								<i class="bi bi-book"></i> Read Blog
							</a>
							<a href="/about" class="btn btn-cyber-outline btn-lg">
								<i class="bi bi-person-circle"></i> About Me
							</a>
						</div>
					</div>
					<div class="col-lg-5 d-none d-lg-block">
						<div class="code-snippet">
							<div style="color: var(--cyber-text-muted);">// Latest tech insights</div>
							<br />
							<div>const <span style="color: var(--cyber-secondary);">blog</span> = {'{'}</div>
							<div style="padding-left: 1.5rem;">focus: [<span style="color: var(--cyber-warning);">'AI'</span>, <span style="color: var(--cyber-warning);">'Coding'</span>, <span style="color: var(--cyber-warning);">'Frameworks'</span>],</div>
							<div style="padding-left: 1.5rem;">mission: <span style="color: var(--cyber-primary);">'Sharing knowledge'</span>,</div>
							<div style="padding-left: 1.5rem;">updated: <span style="color: var(--cyber-secondary);">new Date()</span></div>
							<div>{'}'};</div>
							<br />
							<div style="color: var(--cyber-text-muted);">// Stay curious, keep coding</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- What You'll Find Here -->
		<div class="container" style="margin-top: -40px; position: relative; z-index: 10;">
			<div class="floating-card">
				<div class="row g-4">
					<div class="col-lg-3 col-md-6">
						<div class="stat-card">
							<div class="d-flex align-items-center gap-3 mb-3">
								<div class="pillar-icon" style="background: rgba(var(--cyber-primary-rgb, 0, 194, 255), 0.1);">
									<i class="bi bi-code-slash fs-4" style="color: var(--cyber-primary);"></i>
								</div>
								<div
									class="fw-bold"
									style="font-size: 1.5rem; background: var(--cyber-gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"
								>
									{allPosts.length}+
								</div>
							</div>
							<h5 class="fw-bold mb-2">Web Dev Deep Dives</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0; font-size: 0.9rem;">Frontend & backend tutorials with production-ready patterns</p>
						</div>
					</div>
					<div class="col-lg-3 col-md-6">
						<div class="stat-card">
							<div class="d-flex align-items-center gap-3 mb-3">
								<div class="pillar-icon" style="background: rgba(var(--cyber-secondary-rgb, 106, 255, 150), 0.1);">
									<i class="bi bi-briefcase fs-4" style="color: var(--cyber-secondary);"></i>
								</div>
								<div style="color: var(--cyber-text-muted); font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.05em;">Business</div>
							</div>
							<h5 class="fw-bold mb-2">Dev Career & Business</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0; font-size: 0.9rem;">Freelancing, client work, and thinking like a dev entrepreneur</p>
						</div>
					</div>
					<div class="col-lg-3 col-md-6">
						<div class="stat-card">
							<div class="d-flex align-items-center gap-3 mb-3">
								<div class="pillar-icon" style="background: rgba(var(--cyber-accent-rgb, 255, 107, 107), 0.1);">
									<i class="bi bi-lightbulb fs-4" style="color: var(--cyber-accent);"></i>
								</div>
								<div style="color: var(--cyber-text-muted); font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.05em;">Tips</div>
							</div>
							<h5 class="fw-bold mb-2">Lessons from Work</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0; font-size: 0.9rem;">Real-world tips and battle-tested advice from the trenches</p>
						</div>
					</div>
					<div class="col-lg-3 col-md-6">
						<div class="stat-card">
							<div class="d-flex align-items-center gap-3 mb-3">
								<div class="pillar-icon" style="background: rgba(var(--cyber-warning-rgb, 255, 199, 0), 0.1);">
									<i class="bi bi-stack fs-4" style="color: var(--cyber-warning);"></i>
								</div>
								<div style="color: var(--cyber-text-muted); font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.05em;">Full-Stack</div>
							</div>
							<h5 class="fw-bold mb-2">Full-Stack Craft</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0; font-size: 0.9rem;">From database design to pixel-perfect UI implementation</p>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Topics Section -->
		<section class="py-5">
			<div class="container py-5">
				<div class="text-center mb-5">
					<span class="badge-tech mb-3">Explore Topics</span>
					<h2 class="fw-bold display-5 mb-3">What I Write About</h2>
					<p class="lead" style="color: var(--cyber-text-secondary);">Deep technical content across modern development stacks</p>
				</div>
				<div class="row g-4">
					<div class="col-lg-3">
						<div class="topic-card">
							<div class="topic-icon">
								<i class="bi bi-robot"></i>
							</div>
							<h5 class="fw-bold mb-3">Artificial Intelligence</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0;">LLMs, transformers, neural networks, and practical AI applications.</p>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="topic-card">
							<div class="topic-icon">
								<i class="bi bi-code-square"></i>
							</div>
							<h5 class="fw-bold mb-3">Modern Coding</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0;">Best practices, clean code, design patterns, and algorithms.</p>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="topic-card">
							<div class="topic-icon">
								<i class="bi bi-layers-fill"></i>
							</div>
							<h5 class="fw-bold mb-3">Frameworks</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0;">React, Vue, Astro, Next.js, and emerging frontend tech.</p>
						</div>
					</div>
					<div class="col-lg-3">
						<div class="topic-card">
							<div class="topic-icon">
								<i class="bi bi-hdd-network"></i>
							</div>
							<h5 class="fw-bold mb-3">Infrastructure</h5>
							<p style="color: var(--cyber-text-secondary); margin-bottom: 0;">Cloud, DevOps, Docker, Kubernetes, and deployment strategies.</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Latest Posts Section -->
		{recentPosts.length > 0 && (
			<section class="py-5">
				<div class="container py-5">
					<div class="d-flex justify-content-between align-items-center mb-5">
						<div>
							<span class="badge-tech mb-2">Fresh Content</span>
							<h2 class="fw-bold display-5">Latest Articles</h2>
							<p class="lead" style="color: var(--cyber-text-secondary); margin-bottom: 0;">Stay updated with the latest in tech</p>
						</div>
						<a href="/blog" class="btn btn-cyber-outline btn-lg">View All <i class="bi bi-arrow-right-circle"></i></a>
					</div>
					<div class="row g-4">
						{recentPosts.map((post) => (
							<div class="col-lg-4" key={post.id}>
								<div class="article-card h-100">
									<div class="card-body p-4">
										<div class="d-flex justify-content-between align-items-center mb-3">
											<span class="topic-tag tag-coding">Tech</span>
											<span class="text-muted" style="color: var(--cyber-text-muted);">
												<i class="bi bi-clock"></i>{' '}
												5 min read
											</span>
										</div>
										<h5 class="fw-bold mb-3">{post.data.title}</h5>
										<p style="color: var(--cyber-text-secondary); margin-bottom: 1rem;" class="text-truncate">
											{post.data.description}
										</p>
										<div class="d-flex justify-content-between align-items-center">
											<small style="color: var(--cyber-text-muted);">
												<i class="bi bi-calendar3"></i>{' '}
												{new Date(post.data.pubDate).toLocaleDateString('en-US', {
													month: 'short',
													day: 'numeric',
													year: 'numeric'
												})}
											</small>
											<a href={`/blog/${post.slug}/`} class="btn btn-cyber btn-sm">Read</a>
										</div>
									</div>
								</div>
							</div>
						))}
					</div>
				</div>
			</section>
		)}


		<Footer />
	</body>
</html>

<style>
	main {
		width: 100%;
		max-width: 100%;
		margin: 0;
		padding: 0;
	}
</style>
